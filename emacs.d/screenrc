startup_message off

caption always "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%H %Y/%m/%d "

#encoding UTF-8 GBK #GBK编码会被转换成UTF-8

defscrollback 5000

vbell off

autodetach on


#启动两个窗口
screen
screen

# 默认开始路径为~
chdir

defencoding utf-8
encoding utf-8

# 定制 title bar
#term linux
#termcapinfo rxvt 'hs:ts=/E]2;:fs=/007:ds=/E]2;screen/007'

### ====== 键绑定 ======

# 将快捷键默认 C-a 设为 `

escape ``


# 定制 region 函数键与Emacs一致

bind 3 split -v

bind 2 split

bind o focus

bind 1 only

bind 0 remove



