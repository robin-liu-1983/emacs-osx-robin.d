# -*- mode: snippet -*-
# name: all
# key: all
# possibly add some smart control over the list
# --

.PHONY = all clean
TARGET = test
SOURCES = $(wildcard *.c)
OPT = -O2 -Wall
CC = gcc
CFLAGS = $(OPT) -L /usr/X11R6/lib -lX11 -lm
all: $(SOURCES)
	$(CC) -o $(TARGET) $^ $(CFLAGS)
clean:
	rm -rf *.o $(TARGET)
